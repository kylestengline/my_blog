<div class="container">
  <article>
    <div id="all-the-posts">
      <div class="code-posts">
        <% @codes.each do |c| %>
          <div class="title">
            <h1 class="post-title">
              <%= link_to c.title, code_path(c), class: "post-title-link" %>
            </h1>
          </div>
          <div class="created-at">
            <%= c.created_at.strftime("%B %d, %Y") %>
          </div>
          <div class="content">
            <%= truncate(markdown(c.content), length: 1000, escape: false) %>
            <br/><%= link_to "Read More", code_path(c), class: "read-more-link" %>
          </div>
          <hr>
        <% end %>
      </div>
    </div>
    <%= will_paginate @codes %>
  </article>
</div>
