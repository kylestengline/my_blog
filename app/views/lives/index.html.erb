<div id="all-the-posts">
  <div class="life-posts">
    <% @lives.each do |l| %>
      <div class="created-at">
        <%= l.created_at.to_date %>
      </div>
      <div class="title">
        <%=link_to l.title, title_path(l.title) %>
      </div>
      <div class="content">
        <%= truncate l.content, length: 300 { link_to "keep reading", title_path(l.title) } %>
      </div>
    <% end %>
  </div>
</div>
