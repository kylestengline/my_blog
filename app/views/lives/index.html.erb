<article>
  <div class="container">
    <div id="all-the-posts">
      <div class="life-posts">
        <% @lives.each do |l| %>
          <div class="title">
            <h1 class="post-title">
              <%=link_to l.title, life_path(l), class: "post-title-link"%>
            </h1>
          </div>
          <div class="created-at">
            <%= l.created_at.strftime("%B %d, %Y") %>
          </div>
          <div class="content">
            <%= markdown(truncate l.content, length: 1000) %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</article>
