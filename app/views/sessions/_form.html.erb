<%= form_for :session, url: session_path, html: { class: 'form-horizontal', role: "form"} do |form| %>
  <div class="form-group">
    <div class="control-label col-md-3">
      <%= form.label :email %>
    </div>
    <div class="col-md-9">
      <%= form.text_field :email, type: 'email', class: "form-control" %>
    </div>
  </div>
  <br/>

  <div class="form-group">
    <div class="control-label col-md-3">
      <%= form.label :password %>
    </div>
    <div class="col-md-9">
      <%= form.password_field :password, autocomplete: "off", class: "form-control" %>
    </div>
  </div>
  <br/>

  <div class="submit-field">
     <div class="col-md-offset-3 col-md-9">
      <%= form.submit class: "btn btn-primary btn-lg" %>
     </div>
  </div>
<% end %>
