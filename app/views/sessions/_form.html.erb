<%= form_for :session, url: session_path, html: { class: 'form-signin', role: "form"} do |form| %>
  <div class="text-field">
    <%= form.label :email %>
    <%= form.text_field :email, type: 'email', class: "form-control" %>
  </div>

  <div class="password-field">
    <%= form.label :password %>
    <%= form.password_field :password, class: "form-control" %>
  </div>

  <div class="submit-field">
    <%= form.submit class: "btn btn-lg btn-primary btn-block" %>
  </div>
<% end %>
