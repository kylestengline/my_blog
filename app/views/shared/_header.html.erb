<header role="banner">
  <%= link_to "Home", root_path, class: "navbar-brand" %>
  <% if signed_in? %>
    <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-sample-navbar-collapse-1">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
        </div>
        <div class="navbar-collapse collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav">
            <div class="admin-signed-in-posts">
              <%= link_to "Admin Life Posts", users_lives_path, class: "admin-life-stuff" %>
              <%= link_to "Admin Code Posts", users_codes_path, class: "admin-code-stuff" %>
              <div class="sign-out-path">
                <%= link_to "Sign Out", sign_out_path, method: :delete %>
              </div>
              <div class="new-post">
                <%= link_to "New Life Post", new_users_life_path, class: "new-life-post" %>
                <%= link_to "New Code Post", new_users_code_path, class: "new-code-post" %>
              </div>
            </div>
          </ul>
        </div>
      </div>
    </nav>
  <% else %>
    <div class="posts">
      <div class="non-signed-in-posts">
        <%= link_to "Life", lives_path, class: "life-stuff" %>
        <%= link_to "Code", codes_path, class: "code-stuff" %>
      </div>
    </div>
  <% end %>
</header>
