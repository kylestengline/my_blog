<header role="banner">
  <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
    <%= link_to "Home", root_path, class: "navbar-brand" %>
    <% if signed_in? %>
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-sample-navbar-collapse-1">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
        </div>
        <div class="navbar-collapse collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav">
            <div class="navbar-header">
              <div class="sign-out-path">
                <%= link_to "Sign Out", sign_out_path, method: :delete, class: "navbar-brand page-scroll" %>
              </div>
            </div>
          </ul>
          <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav navbar-right">
              <div class="admin-signed-in-posts">
                <%= link_to "Admin Life Posts", users_lives_path, class: "navbar-brand page-scroll" %>
                <%= link_to "Admin Code Posts", users_codes_path, class: "navbar-brand page-scroll" %>
              </div>
              <div class="new-post">
                <%= link_to "New Life Post", new_users_life_path, class: "navbar-brand page-scroll" %>
                <%= link_to "New Code Post", new_users_code_path, class: "navbar-brand page-scroll" %>
              </div>
            </ul>
          </div>
        </div>
      </div>
    <% else %>
    </nav>
    <div class="posts">
      <div class="non-signed-in-posts">
        <%= link_to "Life", lives_path, class: "life-stuff" %>
        <%= link_to "Code", codes_path, class: "code-stuff" %>
      </div>
    </div>
  <% end %>
</header>
