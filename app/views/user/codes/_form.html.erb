<div class='row'>
  <div class='col-md-12'>
    <%= form_for([:user, @code], html: { class: 'form-horizontal', role: "form"}) do |f| %>
      <% if @code.errors.any? %>
        <div class="panel-danger col-md-offset-1">
          <div class="panel-heading">
            <h2 class="panel-title">
              <%= pluralize(@code.errors.count, "error") %> 
                prohibited this post from being added:
            </h2>

            <div class="panel-body">
              <ul>
                <% @code.errors.full_messages.each do |msg| %>
                  <li>
                    <%= msg %>
                  </li>
                <% end %>  
              </ul>
            </div>
          </div>
        </div>
      <% end %>
      <div class="form-group">
        <div class="control-label col-md-1">
          <%= f.label :title  %>
        </div>
        <div class='col-md-11'>
          <%= f.text_field :title, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-md-1">
          <%= f.label :content %>
        </div>
        <div class='col-md-11'>
          <%= f.text_area :content, class: "form-control" %>
        </div>
      </div>
      <div class='col-md-offset-1 col-md-11'>
        <%= f.submit class: "btn btn-primary btn-lg pull-right" %>
      </div>
    <% end %>
  </div>
</div>
