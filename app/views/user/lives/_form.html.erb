<%= form_for([:user, @life], html: { class: 'form-horizontal', role: "form"}) do |f| %>
  <% if @life.errors.any? %>
    <div class="panel-danger col-md-offset-1">
      <div class="panel-heading">
        <h2 class="panel-title">
          <%= pluralize(@life.errors.count, "error") %> 
            prohibited this post from being added:
        </h2>

        <div class="panel-body">
          <ul>
            <% @life.errors.full_messages.each do |msg| %>
              <li>
                <%= msg %>
              </li>
            <% end %>  
          </ul>
        </div>
      </div>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label :title  %>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :content %>
    <%= f.text_area :content, class: "form-control" %>
  </div>
  <div class='col-md-offset-1 col-md-11'>
    <%= f.submit class: "btn btn-primary btn-lg pull-right" %>
  </div>
<% end %>
